{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/server/*"]
    },
    "types": ["node", "jest", "supertest"],
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
